<div class="row">
    <%= link_to 'Create a new Model', new_model_definition_path, class: 'btn btn-primary pull-right' %>
</div>

<div class="row">
  <h1>Models</h1>

  <% if @model_definitions.size == 0 %>
    No Models found.
    <%= link_to 'Click here', new_model_definition_path %> to make a new one.
  <% end %>

  <table class="table">
  <% @model_definitions.each do |model_definition| %>
    <tr>
       <td>
         <%= link_to model_definition.label, model_definition_path(model_definition) %>
       </td>
       <td>
         <%= link_to "Edit" %>
       </td>
       <td>
         <!-- Doesn't work yet -->
         <%= link_to "Delete", controller: "model_definition", action: "destroy", id: model_definition.id %>
       </td>
    </tr>
  <% end %>
  </table>
</div>
